<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #0d6efd;
            color: white;
            padding: 20px;
            position: fixed;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background: rgba(255, 255, 255, 0.2);
                }

        .content {
            margin-left: 260px;
            padding: 20px;
            flex-grow: 1;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Biblioteca</h2>
        <a href="/">Inicio</a>
        <a href="/Usuario">Usuarios</a>
        <a href="#">Categorías</a>
        <a href="#">Perfil</a>
        <a href="#">Cerrar sesión</a>
    </div>
    <div class="content">
        @RenderBody() <!-- Aquí se insertará el contenido de cada vista -->
    </div>


    @RenderSection("Scripts", required: false)
    @section Scripts {
        <script>
            console.log("Scripts section loaded.");
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    }
   
</body>
</html>
